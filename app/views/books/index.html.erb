<h1>User info</h1>

<div>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>

<h3>name <%= @user.name %></h3>


<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>
<% end %>


<h1>Books</h1>

<% @books.each do |book| %>

  <p>タイトル</p>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>
  
<% end %>
